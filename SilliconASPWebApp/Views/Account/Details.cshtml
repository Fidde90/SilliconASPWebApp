@model AccountDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="account-details">
    <div class="container">

        <div class="profile-menu">
            <div class="name-email-img">
                <img src="images\Jhon-doe.svg" />
                <h5>John Doe</h5>
                <p>john.doe@domain.com</p>
            </div>
            <a href="#">
                <div class="button active"><i class="fa-regular fa-gear"></i> Account details</div>
            </a>
            <a href="security.html">
                <div class="button"><i class="fa-regular fa-lock"></i> Security</div>
            </a>
            <a href="saved_courses.html">
                <div class="button"><i class="fa-regular fa-bookmark"></i> Saved courses</div>
            </a>
            <a href="index.html">
                <div class="button"><i class="fa-solid fa-right-from-bracket fa-flip-horizontal"></i> Sign out</div>
            </a>
        </div>

        <div class="basic-details">
            <h2>Account details</h2>
            <h5>Basic info</h5>

            <form>
                <div class="details">
                    <div class="firstName">
                        <label class="label" for="firstName">First name</label>
                        <div class="input-container">
                            <input type="text" id="firstName" name="firstName" placeholder="John" required
                                   tabindex="0">
                        </div>
                    </div>

                    <div class="lastName">
                        <label class="label" for="lastName">Last name</label>
                        <div class="input-container">
                            <input type="text" id="lastName" name="lastName" placeholder="Doe" required
                                   tabindex="1">
                        </div>
                    </div>

                    <div class="email">
                        <label class="label" for="email">Email</label>
                        <div class="input-container">
                            <input type="email" id="email" name="email" placeholder="Doe" required tabindex="2">
                        </div>
                    </div>

                    <div class="phone">
                        <label class="label" for="phone">Phone</label>
                        <div class="input-container">
                            <input type="tel" id="phone" name="phone" placeholder="Phone nr" required
                                   tabindex="3">
                        </div>
                    </div>
                </div>

                <div class="bio">
                    <label class="label" for="bio">Bio <span>(optional)</span></label>
                    <div class="bio-container">
                        <textarea id="bio" name="bio" tabindex="4" placeholder="Add short bio.."></textarea>
                    </div>
                </div>

                <div class="buttons">
                    <button type="button" class="btn-gray">Cancel</button>
                    <button type="submit" class="btn-theme">Save changes</button>
                </div>
            </form>

            <div class="line"></div>
        </div>

        <div class="adress-details">
            <h5>Adress</h5>

            <div class="adress">
                <form>
                    <div class="adress-one">
                        <label class="label" for="adress-one">Adress line 1</label>
                        <div class="input-container">
                            <input type="text" id="adress-one" name="adress-one" placeholder="Main adress"
                                   required tabindex="5">
                        </div>
                    </div>

                    <div class="adress-two">
                        <label class="label" for="adressTwo">Adress line 2 <span>(optional)</span></label>
                        <div class="input-container">
                            <input type="text" id="adressTwo" name="adressTwo" placeholder="Secondary adress.."
                                   tabindex="6">
                        </div>
                    </div>

                    <div class="postal-city">
                        <div class="postal-code-container">
                            <label class="label" for="postalCode">Postal code</label>
                            <div class="input-container">
                                <input type="tel" id="postalCode" name="postalCode" placeholder="Postal code"
                                       required tabindex="7">
                            </div>
                        </div>

                        <div class="postal-code-container">
                            <label class="label" for="city">City</label>
                            <div class="input-container">
                                <input type="text" id="city" name="city" placeholder="City" required
                                       tabindex="8">
                            </div>
                        </div>
                    </div>

                    <div class="buttons">
                        <button type="button" class="btn-gray">Cancel</button>
                        <button type="submit" class="btn-theme">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>