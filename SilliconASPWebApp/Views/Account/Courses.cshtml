@model SavedCoursesViewModel
@{
}

<section class="saved-courses">
    <div class="container">

        @await Html.PartialAsync("~/Views/Shared/Partials/AccountPartials/_ProfileMenuPartial.cshtml", Model.ProfileMenuModel)

        <div class="courses">

            <div class="title-delete">
                <h2>Saved items</h2>
                <button><i class="fa-regular fa-trash"></i>Delete all</button>
            </div>

            <div class="course-cards">
                <a class="card-link" href="#">
                    <div class="card">
                        <div class="card-symbol"><i class="fa-solid fa-bookmark"></i></div>

                        <div class="pic">
                            <img src="images\course-blender.svg" alt="laptop" />
                        </div>
                        <div class="info">
                            <div class="title">Blender Character Creator v2.0 for Video Games Design</div>
                            <p>By Ralph Edwards</p>
                            <label>$18.99</label>
                            <div class="line"></div>
                            <div class="time-rates">
                                <div><i class="fa-regular fa-clock"></i> <span>160 hours</span></div>
                                <div><i class="fa-light fa-thumbs-up"></i> <span>92% (3.1K)</span></div>
                            </div>
                        </div>
                    </div>
                </a>

                @await Html.PartialAsync("~/Views/Shared/Partials/_CourseCardPartial.cshtml", Model.CourseCard)
            
            </div>
        </div>
    </div>

</section>