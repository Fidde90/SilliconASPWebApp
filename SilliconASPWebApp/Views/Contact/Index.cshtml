@model ContactViewModel
@{

}

<section class="contact-us">
    <div class="container">
        <div class="stuff">
            <div class="path">
                <p><i class="fa-regular fa-house"></i> <a href="index.html"> <span>Home</span></a></p>
                <p><i class="fa-solid fa-angles-right"></i> <a href="courses.html"><span>Contact</span></a></p>
            </div>
            <h1>Contact us</h1>
            <div class="email-us">
                <div>
                    <div class="circle"><i class="fa-regular fa-envelope"></i></div>
                </div>
                <div class="content">
                    <h4>Email us</h4>
                    <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                    <a href="#">Leave a message <i class="fa-solid fa-arrow-right"></i></a>
                </div>

            </div>
            <div class="careers">
                <div>
                    <div class="circle"><img src="images\users-plus.svg"></div>
                </div>
                <div class="content">
                    <h4>Careers</h4>
                    <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                    <a href="#">Send an application <i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="card-form">
            <h2>Get in contact with us</h2>

            <form method="post" novalidate class="contact-form" asp-action="CreateMessage" asp-controller="Contact">

                <div id="fullname" class="input-group">
                    <label asp-for="Form.FullName"></label>
                    <span asp-validation-for="Form.FullName"></span>
                    <input asp-for="Form.FullName" />
                </div>

                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email"></label>
                    <span asp-validation-for="Form.Email"></span>
                    <input asp-for="Form.Email" />
                </div>

                <label class="label">Service <span>(optional)</span></label>

                <select id="cars" asp-for="Form.Service">
                    <option disabled selected>Choose the service you are interested in</option>
                    @if(Model.Services != null)
                    {
                        foreach(var service in Model.Services)
                        {
                            <option value="@service">@service</option>
                        }
                 
                    }
                </select>
      
                <div id="message" class="text-area">
                    <label asp-for="Form.Message"></label>
                    <span asp-validation-for="Form.Message"></span>
                    <textarea asp-for="Form.Message"></textarea>
                </div>

                <button type="submit" class="btn-theme-s" >Send contact request</button>
            </form>
        </div>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6310.919366894053!2d-122.40965115571535!3d37.73235866632476!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f7f02449cda7b%3A0x56b4d414afddd65!2sSilver%20Terrace%2C%20San%20Francisco%2C%20Kalifornien%2094124%2C%20USA!5e0!3m2!1ssv!2sse!4v1708367491414!5m2!1ssv!2sse"
            width="600" height="860" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
    </iframe>
</section>