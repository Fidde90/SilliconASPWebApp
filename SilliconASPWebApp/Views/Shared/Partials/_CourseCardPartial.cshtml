@model CourseCardModel

<a class="card-link" href="#">
    <div class="card">
        <div class="card-symbol"><i class="fa-solid fa-bookmark"></i></div>

        <div class="pic">
            <img src="@Model.Image.Src" alt="@Model.Image.AltText"/>
        </div>
        <div class="info">
            <div class="title">@Model.Title</div>
            <p>@Model.Teacher</p>
            <label>@Model.Price</label>
            <div class="line"></div>
            <div class="time-rates">
                <div><i class="fa-regular fa-clock"></i> <span>@Model.Hours</span></div>
                <div><i class="fa-light fa-thumbs-up"></i> <span>@Model.rates</span></div>
            </div>
        </div>
    </div>
</a>