@model IEnumerable<CourseCardModel>

<section class="courses">
    <div class="container">
        <div class="course-cards">


            @foreach (var course in Model)
            {
                <a class="card-link" asp-controller="Courses" asp-action="CourseDetails">
                    <div class="card">
                        <img class="card-symbol" src="/images/course-symbol.svg" alt="course symbol">
                        <div class="pic">
                            <img src="@course.PictureUrl" alt="laptop" />
                        </div>
                        <div class="info">
                            <div class="title">@course.Title</div>
                            <p>@course.Author</p>
                            <label>@course.Price</label>
                            <div class="line"></div>
                            <div class="time-rates">
                                <div><i class="fa-regular fa-clock"></i> <span>@course.Hours</span></div>
                                <div><i class="fa-light fa-thumbs-up"></i> <span>@course.LikesInProcent (@course.LikesInNumbers)</span></div>
                            </div>
                        </div>
                    </div>
                </a>
            }




            <div class="buttons">
                <button class="arrow left"><i class="fa-solid fa-chevron-left"></i></button>
                <button>1</button>
                <button>2</button>
                <button>3</button>
                <button>4</button>
                <button class="arrow right"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </div>
    </div>
</section>
