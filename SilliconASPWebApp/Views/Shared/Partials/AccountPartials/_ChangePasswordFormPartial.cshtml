@model SecurityFormModel

<form method="post" novalidate asp-controller="Account" asp-action="ChangePassword">
    <h5>Password</h5>

    <div id="form-password" class="input-group">
        <label asp-for="@Model.Password"></label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" />
    </div>

    <div id="form-newPassword" class="input-group">
        <label asp-for="@Model.NewPassword"></label>
        <span asp-validation-for="@Model.NewPassword"></span>
        <input asp-for="@Model.NewPassword" />
    </div>

    <div id="form-confirmPassword" class="input-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <span asp-validation-for="@Model.ConfirmPassword"></span>
        <input asp-for="@Model.ConfirmPassword" />
    </div>

    <div class="buttons">
        <button class="btn-gray">Cancel</button>
        <button type="submit" class="btn-theme">Change password</button>
    </div>
    <hr />
</form>