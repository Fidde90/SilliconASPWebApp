@model SignUpViewModel
@{
    ViewData["Title"] = "Sign up";
}

<section class="create-account">
    <div class="container">
        <div class="content">
            <h1>Create account</h1>
            <p>Already have an account? <a href="#">Sign in here.</a></p>
          
            <form novalidate method="post" asp-controller="Auth" asp-action="SignUp">
                <div class="name">

                    <div class="nameContainer">
                        <label class="label" for="firstName">First name</label>
                        <!-- <span id="error-email"></span> -->
                        <div class="firstName-input">
                            <input id="firstName" name="firstName" type="text" placeholder="First name" required
                                   tabindex="0" autocomplete="off" onkeyup="" />
                        </div>
                    </div>

                    <div class="nameContainer">
                        <label class="label" for="lastName">Last name</label>
                        <!-- <span id="error-email"></span> -->
                        <div class="lastName-input">
                            <input id="lastName" name="lastName" type="text" placeholder="Last name" required
                                   tabindex="1" autocomplete="off" onkeyup="" />
                        </div>
                    </div>
                </div>

                <div class="email">
                    <label class="label" for="email">Email</label>
                    <!-- <span id="error-email"></span> -->
                    <div class="email-input">
                        <input id="email" name="email" type="text" placeholder="Email" required tabindex="2"
                               autocomplete="off" onkeyup="" />
                    </div>
                </div>

                <div class="password">
                    <label class="label" for="password">Password</label>
                    <!-- <span id="error-password"></span> -->
                    <div class="password-input">
                        <input id="password" name="password" type="text" required placeholder="*******"
                               tabindex="3" autocomplete="off" onkeyup="" />
                    </div>
                </div>

                <div class="confirmPassword">
                    <label class="label" for="confirmPassword">Confirm password</label>
                    <!-- <span id="error-password"></span> -->
                    <div class="confirmPassword-input">
                        <input id="confirmPassword" name="confirmPassword" type="text" required
                               placeholder="*******" tabindex="4" autocomplete="off" onkeyup="" />
                    </div>
                </div>

                <div class="checkbox">
                    <input id="checkbox" type="checkbox" />
                    <label for="checkbox">Remember me</label>
                </div>
                <button type="submit" class="btn-theme">@Model.Title</button>
                <a href="#">Forgot your password?</a>
            </form>
        </div>
    </div>
</section>

